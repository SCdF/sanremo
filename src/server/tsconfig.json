{
  "compilerOptions": {
    "module": "NodeNext",
    "target": "ES2020",
    "lib": ["esnext", "DOM"],
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "skipLibCheck": true
  },
  "include": ["./**/*.ts"]
}
