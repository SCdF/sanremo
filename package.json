{
  "name": "sanremo",
  "type": "modu le",
  "version": "0.5.0",
  "packageManager": "yarn@4.0.2",
  "//": [
    " TODO update everything else thing by thing",
    " TODO migrate off heroku (fly.io?)",
    " TODO replacement for jest and general flaky react unit testing (vitest?)",
    " TODO redux -> https://github.com/pmndrs/zustand"
  ],
  "scripts": {
    "start": "node dist/server",
    "start:local": "DATABASE_URL=postgres://postgres:postgres@localhost:15432 PORT=5000 node dist/server",
    "psql": "psql postgres://postgres:postgres@localhost:15432",
    "biome": "biome check .",
    "clean": "rm -r dist .parcel-cache 2> /dev/null || true",
    "check": "biome check . && tsc --noEmit -p src/client/tsconfig.json && tsc --noEmit -p src/server/tsconfig.json",
    "build:client": "parcel build --target client --reporter @parcel/reporter-bundle-analyzer",
    "build:server": "parcel build --target server --reporter @parcel/reporter-bundle-analyzer",
    "build": "yarn clean && parcel build --reporter @parcel/reporter-bundle-analyzer && node ./scripts/inject-manifest.mjs",
    "dev": "parcel --target client",
    "test:client": "node --experimental-vm-modules $(yarn bin jest) src/client",
    "test:server": "jest src/server",
    "test": "yarn test:client && yarn test:server"
  },
  "targets": {
    "client": {
      "source": "./src/client/index.html"
    },
    "server": {
      "context": "node",
      "source": "./src/server/index.ts",
      "outputFormat": "esmodule",
      "isLibrary": true
    }
  },
  "@dependencies": {
    "pg-protocol": "we reference it directly so it needs to be here for parcel, but it's transitiive from pg"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
